<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MPGC_APP.Views.WaitingPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cargando"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <ActivityIndicator x:Name="activityIndicator" IsVisible="true" IsRunning="True" VerticalOptions="Start"></ActivityIndicator>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>